<p id="notice"><%= notice %></p>

<h1>Listing Definitions</h1>

<table class="table">
  <thead>
    <tr>
      <th>Unit</th>
      <th>Formula</th>
      <th>Converted to</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @definitions.each do |definition| %>
      <tr>
        <td><%= definition.unit.name %></td>
        <td><%= definition.formula %></td>
        <td><%= definition.converted_to.name %></td>
        <td><%= link_to 'Show', definition %></td>
        <td><%= link_to 'Edit', edit_definition_path(definition) %></td>
        <td><%= link_to 'Destroy', definition, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Definition', new_definition_path, class: 'btn btn-primary' %>
